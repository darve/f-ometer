# Mastodon instance to poll (public timeline)
MASTODON_INSTANCE=https://mastodon.social

# Optional: Mastodon access token for higher rate limits
# MASTODON_ACCESS_TOKEN=

# GDELT configuration
GDELT_MODE=api  # 'api' for REST API, 'bigquery' for BigQuery (requires GCP credentials)

# Optional: Google Cloud Project ID (for BigQuery mode)
# GCP_PROJECT_ID=

# Server
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
